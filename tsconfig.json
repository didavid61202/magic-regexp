{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "magic-regexp/transform": ["./src/transform"],
      "magic-regexp/further-magic": ["./src/further-magic"],
      "magic-regexp": ["./src/index"]
    }
  },
  "exclude": ["docs", "dist"]
}
